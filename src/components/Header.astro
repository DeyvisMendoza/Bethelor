  .hover-wrapper {
  position: relative;
  width: 75px;
  height: 75px;
  overflow: hidden; /* evita que se salga */
}

.hover-container {
  position: absolute;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: transform 0.15s ease-out;
  border: 1px solid rgb(57, 57, 57);
  cursor: pointer;
}

.hover-text {
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-28%, -50%);
  transition: transform 0.15s ease-out;
  font-size: 12px;
  font-weight: bold;
}

