---
import { BotonFooter } from "../BotonFooter/BotonFooter";
import facebookImg from '../../assets/footer/facebook.png';
import twitterImg from '../../assets/footer/twitter.png';
import pinterestImg from '../../assets/footer/pinterest.png';
import telegramImg from '../../assets/footer/telegram.png';
import logo from "../../assets/footer/logo.png"
import { Image } from 'astro:assets';


const socialIcons = [
  { href: "#facebook", src: facebookImg, alt: "Facebook" },
  { href: "#twitter", src: twitterImg, alt: "Twitter" },
  { href: "#pinterest", src: pinterestImg, alt: "Pinterest" },
  { href: "#telegram", src: telegramImg, alt: "Telegram" },
];
---

<footer class="footer-bg footer-text footer-py footer-px">
  <div class="footer-container footer-grid footer-gap">
    <div class="footer-logo">
      <Image
      src={logo}
      alt="logo"
      class="logo-footer"
      data-animation-direction="left"
      loading="lazy"
      width={250}
      />
      <div class="footer-contact-item">
        <span class="footer-contact-label">Address</span>
        <p class="footer-contact-info">59 Serpens Ct, Rosedale, MD 21237</p>
      </div>
      <div class="footer-contact-item">
        <span class="footer-contact-label">Mail us:</span>
        <p class="footer-contact-info">Contact@bethelor.com</p>
      </div>
      <div class="footer-contact-item">
        <span class="footer-contact-label">Call us:</span>
        <p class="footer-contact-info">+1 240 618 7916</p>
      </div>
    </div>

    <div class="footer-col">
      <h3 class="footer-col-title">Explore Our Projects</h3>
      <ul class="footer-list">
        <li><a href="/projects" class="footer-link-hover">All Projects</a></li>
        <li><a href="/projects/kitchens" class="footer-link-hover">Kitchens</a></li>
        <li><a href="/projects/bathrooms" class="footer-link-hover">Bathrooms</a></li>
        <li><a href="/projects/painting" class="footer-link-hover">Interior & Exterior Painting</a></li>
        <li><a href="/projects/additions" class="footer-link-hover">Home Additions</a></li>
        <li><a href="/projects/repair" class="footer-link-hover">Home Repair & Improvement</a></li>
      </ul>
    </div>

    <div class="footer-col">
      <h3 class="footer-col-title">Links</h3>
      <ul class="footer-list">
        <li><a href="/" class="footer-link-hover">Home</a></li>
        <li><a href="/services" class="footer-link-hover">Services</a></li>
        <li><a href="/about" class="footer-link-hover">About Us</a></li>
        <li><a href="/contact" class="footer-link-hover">Contact</a></li>
        <li><a href="/blogs" class="footer-link-hover">Blogs</a></li>
        <li><a href="/privacy" class="footer-link-hover">Privacy Policy</a></li>
        <li><a href="/terms" class="footer-link-hover">Terms of Use</a></li>
      </ul>
    </div>

    <div class="footer-col">
      <p class="footer-cta-desc">
        Ready to remodel your house in Maryland? Contact Bethelor today for a
        free quote and expert guidance from start to finish.
      </p>
      <BotonFooter client:load />
      <div class="footer-socials">
        {socialIcons.map((icon) => (
          <a href={icon.href} class="footer-social-link">
            <Image src={icon.src} alt={icon.alt} />
          </a>
        ))}
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>Copyright Â© 2025 Mako by CeeaThemes. All Rights Reserved.</p>
    <div class="footer-bottom-links">
      <a href="/terms" class="footer-link-hover">
        Terms of Use / Privacy Environmental Policy
      </a>
    </div>
  </div>
</footer>

<style>
.name-logo {
  font-family: "Bebas Neue", sans-serif;
  font-weight: 400;
  font-style: normal;
  font-size: 2rem;
}
.texto-alternativo {
  display: block;
  font-size: 10px;
  margin-top: -15px;
  margin-bottom: 25px;
}
svg {
  width: 40px;
  height: auto;
}
.footer-bg {
  background-color: #000000;
  color: #efefef;
  padding: 20px 100px;
  text-align: left;
  display: flex;
  justify-content: start;
  flex-direction: column;
  gap: 20px;
}
.footer-bg img {
  width: 40px;
  height: auto;
  margin-right: 10px;
}

.footer-socials img:hover {
  filter: invert(100%);
}


.footer-container {
  display: flex;
  justify-content: space-between;
  align-items: start;
  padding: 20px;
  width: 100%;
  gap: 50px;
  flex-wrap: wrap;
}
.footer-logo {
  display: flex;
  flex-direction: column;
  align-items: start;
  width: auto;
  flex-basis: 25%;
  min-width: 200px;
}
.footer-contact-item {
  display: flex;
  justify-content: start;
  align-items: start;
  gap: 10px;
  margin-bottom: 10px;
}
.footer-contact-item span {
  font-size: 14px;
  font-weight: 400;
  color: #6d6d6d;
}
.footer-contact-item p {
  font-size: 14px;
  font-weight: 400;
  margin: 0;
}
.footer-col {
  width: auto;
  text-align: start;
  display: flex;
  flex-direction: column;
  align-items: start;
  justify-content: start;
  flex-basis: 20%;
  min-width: 150px;
}
.footer-col h3 {
  font-size: 16px;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 10px;
  text-transform: uppercase;
  text-align: left;
}
.footer-col ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 10px;
  align-items: start;
}
.footer-col ul li {
  font-size: 14px;
  font-weight: 400;
  color: #6d6d6d;
  cursor: pointer;
}
.footer-col ul li:hover {
  color: #ffffff;
}
.footer-col .footer-cta-desc {
  font-size: 14px;
  font-weight: 400;
  color: #aeaeae;
  margin-bottom: 10px;
  text-align: left;
}
.footer-socials {
  margin-top: 40px;
  display: flex;
  justify-content: start;
  align-items: start;
  gap: 5px;
}
.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  width: 100%;
  gap: 50px;
  border-top: 1px solid #373737;
  flex-wrap: wrap;
}
.footer-bottom p {
  font-size: 14px;
  font-weight: 400;
  color: #6d6d6d;
  margin: 0;
  flex-basis: content;
  text-align: left;
}
.footer-bottom a {
  font-size: 14px;
  font-weight: 400;
  color: #6d6d6d;
  text-decoration: none;
  cursor: pointer;
  text-align: left;
}
.footer-bottom a:hover {
  color: #ffffff;
}

.logo-footer{
  width: 250px !important;
  margin-bottom: 30px;
  cursor: pointer;
}
@media (max-width: 1024px) {
  .footer-bg {
    padding: 20px 30px;
    text-align: left;
  }
  .footer-container {
    flex-direction: column;
    gap: 30px;
    align-items: start;
  }
  .footer-logo,
  .footer-col {
    width: 100%;
    max-width: 600px;
    align-items: start;
    text-align: left;
  }
  .footer-contact-item {
    justify-content: start;
  }
  .footer-col h3 {
    text-align: left;
  }
  .footer-col ul {
    align-items: start;
  }
  .footer-socials {
    justify-content: start;
    margin-top: 20px;
  }
  .footer-bottom {
    flex-direction: column;
    gap: 15px;
    padding: 15px 20px;
    align-items: start;
    text-align: left;
  }
  .footer-bottom p,
  .footer-bottom a {
    text-align: left;
    width: 100%;
  }
}
@media (max-width: 768px) {
  .footer-bg {
    padding: 20px 15px;
  }
  .footer-container {
    gap: 25px;
  }
  .footer-logo {
    min-width: unset;
  }
  .footer-contact-item {
    flex-direction: row;
    align-items: start;
    text-align: left;
    gap: 10px;
  }
  .footer-contact-item span,
  .footer-contact-item p {
    font-size: 13px;
  }
  .footer-col {
    min-width: unset;
    padding: 0;
  }
  .footer-col h3 {
    font-size: 15px;
  }
  .footer-col ul li,
  .footer-col .footer-cta-desc {
    font-size: 13px;
  }
  .footer-socials {
    margin-top: 15px;
  }
  .footer-bottom {
    padding: 10px 15px;
    gap: 10px;
  }
  .footer-bottom p,
  .footer-bottom a {
    font-size: 13px;
  }
}
@media (max-width: 480px) {
  .footer-bg {
    padding: 15px 10px;
  }
  .footer-container {
    gap: 20px;
  }
  .footer-col {
    padding: 0;
  }
  .footer-col h3 {
    font-size: 14px;
  }
  .footer-col ul li,
  .footer-col .footer-cta-desc {
    font-size: 12px;
  }
  .footer-socials {
    margin-top: 10px;
  }
  .footer-bottom {
    padding: 8px 10px;
    gap: 8px;
  }
  .footer-bottom p,
  .footer-bottom a {
    font-size: 12px;
  }
}
</style>
