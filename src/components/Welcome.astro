---
/* Astro Component Script */
---
<section class="welcome bg-black text-white">
    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2">
        <!-- Left Section: Text Content -->
        <div class="p-8 flex flex-col justify-center">
            <h1 class="text-5xl lg:text-6xl font-bold leading-tight mb-6">
                Home Remodeling <br /> in Maryland
            </h1>
            <p class="text-lg mb-4">
                Kitchens, bathrooms, basements & more. <br />
                High-quality results. Trusted service.
            </p>
        </div>

        <!-- Right Section: Gallery -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
            <img src="public/welcome1.png" alt="Bathroom remodeling" class="w-full h-auto object-cover" />
            <img src="public/welcome2.png" alt="Kitchen remodeling" class="w-full h-auto object-cover" />
            <img src="public/welcome3.png" alt="Living room remodeling" class="w-full h-auto object-cover" />
        </div>
    </div>

    <!-- Bottom Section: Links -->
    <div class="flex justify-around bg-black py-4 border-t border-gray-700">
        <a href="#services" class="text-center text-white hover:underline">
            View All Services
        </a>
        <a href="#projects" class="text-center text-white hover:underline">
            View All Projects
        </a>
        <a href="#about" class="text-center text-white hover:underline">
            About Us
        </a>
        <a href="#contact" class="text-center text-white hover:underline">
            Contact Us
        </a>
    </div>
</section>