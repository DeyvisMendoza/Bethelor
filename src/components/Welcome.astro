---
import "../styles/welcome.css";
---

<section class="welcome">
  <!-- Main Section -->
  <div class="main-section">
    <!-- Left Image with Text (50%) -->
    <div class="image-text-container">
      <div
        class="image-overlay"
        style="background-image: url('/public/welcome-fondo1.png');"
      >
      </div>
      <div class="text-container">
        <h1>Home Remodeling in Maryland</h1>
        <p>
          Kitchens, bathrooms, basements & more.<br />High-quality results.
          Trusted service.
        </p>
      </div>
    </div>

    <!-- Right Images and Description (50%) -->
    <div class="right-container">
      <div class="right-images">
        <div
          class="image"
          style="background-image: url('/public/welcome-fondo2.png');"
        >
        </div>
        <div
          class="image"
          style="background-image: url('/public/welcome-fondo3.png');"
        >
        </div>
      </div>
      <div class="description">
        <p class="fade-in"  data-scroll>
          At Bethelor, we bring your vision to life with expert remodeling of
          kitchens, bathrooms, and interiors. Proudly serving Maryland with
          reliable craftsmanship, personalized designs, and results that feel
          like home.
        </p>
      </div>
    </div>
  </div>

  <!-- Buttons Section -->
  <div class="button-section">
  <div class="button-item"><a href="/services">View All Services</a></div>
  <div class="button-item"><a href="/projects">View All Projects</a></div>
  <div class="button-item"><a href="/about">About Us</a></div>
  <div class="button-item"><a href="/contact">Contact Us</a></div>
</div>

</section>

