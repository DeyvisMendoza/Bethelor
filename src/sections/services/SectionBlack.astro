---

<section id="hero-section" class="hero-section-container">
  {/* Sección Superior */}
  <div class="hero-content-top">
    {/* Columna 1: Expert Solutions */}
    <div class="hero-column-expert-solutions animated-item">
      <ul class="expert-solutions-list">
        <li>Expert Solutions</li>
      </ul>
    </div>

    {/* Columna 2: Título y Descripción */}
    <div class="hero-column-main-text animated-item delay-100">
      <h3 class="hero-title">
        At Bethelor, We Build More Than Spaces — We Build Trust.
      </h3>
      <p class="hero-description">
        Our home remodeling services are designed to elevate your everyday life.
        From kitchens to bathrooms, we blend craftsmanship with care to make
        your home truly yours.
      </p>
    </div>

    {/* Columna 3: Botón de Exploración */}
    <div class="hero-column-explore-button animated-item delay-200">
      <a href="#services" class="explore-button">
        <span class="button-text">Explore Our Remodeling Services</span>
        <span class="arrow-down">↓</span>
      </a>
    </div>
  </div>

  {/* Línea Divisoria */}
  <div class="hero-divider-line animated-item delay-300"></div>

  {/* Sección Inferior (Estadísticas) */}
  <div class="hero-content-bottom">
    <div class="choose-stats">
      <div class="choose-stat animated-item delay-400">
        <span>+12</span>
        <p>COMPLETED PROJECTS SINCE 2023</p>
      </div>
      <div class="choose-stat animated-item delay-500">
        <span>100%</span>
        <p>CLIENT SATISFACTION GOAL</p>
      </div>
    </div>
    <div class="bottom-description animated-item delay-600">
      <p>
        Proudly remodeling homes across rosedale, Towson, Dundalk, Glen Burnie,
        and beyond. Discover why Maryland homeowners trust Bethelor for quality
        and reliability.
      </p>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const heroSection = document.getElementById('hero-section');
    if (!heroSection) return;

    // Selecciona todos los elementos que quieres animar dentro de la sección
    const animatedItems = heroSection.querySelectorAll('.animated-item');

    // Estado inicial de los elementos (ocultos y ligeramente desplazados)
    animatedItems.forEach(item => {
      const el = item as HTMLElement;
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)'; // Pequeño desplazamiento hacia arriba
      el.style.transition = 'opacity 0.7s ease-out, transform 0.7s ease-out';

      // Aplicar retraso si la clase delay-XXX está presente
      const delayClass = Array.from(item.classList).find(cls => cls.startsWith('delay-'));
      if (delayClass) {
        const delayMs = parseInt(delayClass.replace('delay-', '')) || 0;
        el.style.transitionDelay = `${delayMs / 1000}s`; // Convertir ms a segundos
      }
    });

    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Si la sección es visible, animar los elementos dentro
          animatedItems.forEach(item => {
            const el = item as HTMLElement;
            el.style.opacity = '1';
            el.style.transform = 'translateY(0)';
          });
          observer.unobserve(entry.target); // Dejar de observar después de la animación
        }
      });
    }, {
      threshold: 0.1 // Activar cuando el 10% de la sección es visible
    });

    observer.observe(heroSection); // Observa la sección completa
  });
</script>

<style>
  /* Importa las fuentes si no están ya importadas globalmente */
  @import url("https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Host+Grotesk:ital,wght@0,300..800;1,300..800&display=swap");

  /* --- ESTILOS BASE (DESKTOP) --- */
  .hero-section-container {
    background-color: #000000;
    color: #ffffff;
    padding: 100px 50px; /* Padding vertical y horizontal base */
    font-family: Arial, sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding-bottom: 50px;
  }

  .hero-content-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    max-width: 1400px;
    width: 100%; /* Asegura que ocupe todo el ancho disponible hasta max-width */
    margin-bottom: 80px;
    padding: 0 100px; /* Padding interno para desktop */
  }

  .hero-column-expert-solutions {
    flex: 0 0 15%; /* Intenta mantener 15% */
    padding-right: 20px;
  }

  .expert-solutions-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 1.1em; /* 17.6px (si la base es 16px) */
    opacity: 0.8;
    display: flex;
    align-items: center; /* Alinea el texto y el punto */
  }

  .expert-solutions-list li::before {
    content: "";
    display: inline-block;
    width: 6px;
    height: 6px;
    background-color: #ffffff;
    border-radius: 50%;
    margin-right: 10px;
    vertical-align: middle;
  }

  .hero-column-main-text {
    flex: 2; /* Flexible, ocupará 2 partes del espacio disponible */
    padding: 0 30px;
    max-width: 500px; /* Limita el ancho del texto */
  }

  .hero-title {
    font-size: 2.5em; /* 40px */
    line-height: 1.2;
    margin: 0 0 30px 0;
    font-family: "Host Grotesk", sans-serif;
  }

  .hero-description {
    font-size: 15px;
    line-height: 1.6;
    max-width: 600px; /* Limita el ancho de la descripción */
    font-weight: 300;
    opacity: 0.9;
    font-family: "DM Sans", sans-serif;
  }

  .hero-column-explore-button {
    flex: 0 0 200px; /* Mantiene un ancho fijo de 200px para el botón */
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .explore-button {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background-color: #ffffff;
    color: #000000;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    text-decoration: none;
    font-size: 1.1em; /* 17.6px */
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .explore-button:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.2);
  }

  .explore-button .button-text {
    margin-bottom: 5px;
    max-width: 80%;
    font-weight: 200;
    font-family: "Host Grotesk", sans-serif;
    font-size: 18px;
  }

  .explore-button .arrow-down {
    font-size: 1.5em; /* 24px */
    margin-top: 5px;
  }

  .hero-divider-line {
    width: 100%;
    max-width: 1400px;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.3);
    margin-bottom: 80px;
  }

  .hero-content-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end; /* Alinea los elementos al final (estadísticas y descripción) */
    max-width: 1070px;
    width: 100%;
    gap: 50px; /* Espacio entre las estadísticas y la descripción */
  }

  .choose-stats {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 30px;
    width: 100%; /* Ocupa todo el ancho disponible en su contenedor */
    max-width: 1200px; /* Puede ser un valor grande, el flex lo ajustará */
    padding: 20px;
    flex-wrap: wrap; /* Permite que los stats se envuelvan si no hay espacio */
  }

  /* Nota: los estilos anidados p y span requieren un preprocesador como Sass/Less o PostCSS en Astro */
  .choose-stats p {
    font-family: "Host Grotesk", sans-serif;
    font-weight: 300;
    font-size: 9px;
    color: #ffffff;
    letter-spacing: 2px;
    line-height: 1.9;
  }

  .choose-stats span {
    font-family: "DM Sans", sans-serif;
    font-weight: 400;
    font-size: 45px;
    color: #ffffff;
  }

  .choose-stat {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 20px;
    align-items: center;
    flex: 1 1 250px; /* Crece, encoge, base de 250px */
  }

  /* Las siguientes clases no están usadas en el HTML proporcionado, pero las mantengo por si acaso */
  .stats-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-right: 50px;
  }
  .stat-number {
    font-size: 3em;
    font-weight: bold;
    line-height: 1;
    margin-bottom: 5px;
  }
  .stat-text {
    font-size: 0.9em;
    opacity: 0.7;
    line-height: 1.3;
  }
  /* Fin de clases no usadas en el HTML */

  .bottom-description {
    font-size: 14px;
    line-height: 1.6;
    opacity: 0.9;
    font-family: "DM Sans", sans-serif;
    font-weight: 200;
    max-width: 450px;
    padding: 15px;
  }

  /* --- MEDIA QUERIES PARA RESPONSIVIDAD --- */

  /* Tablet Grande/Desktop Pequeño: Ajustes para pantallas entre 1400px y 1025px */
  @media (max-width: 1400px) {
    .hero-content-top {
      padding: 0 50px;
      margin-bottom: 60px;
    }

    .hero-column-main-text {
      padding: 0 20px;
    }

    .hero-title {
      font-size: 2.2em;
    }
  }

  /* Tablet (Landscape): 1024px */
  @media (max-width: 1024px) {
    .hero-section-container {
      padding: 80px 40px;
    }

    .hero-content-top {
      flex-wrap: wrap;
      justify-content: center;
      padding: 0 20px;
      margin-bottom: 50px;
    }

    .hero-column-expert-solutions,
    .hero-column-main-text,
    .hero-column-explore-button {
      flex: 1 1 100%;
      text-align: center;
      padding: 0;
      margin-bottom: 30px;
    }

    .hero-column-expert-solutions {
      margin-bottom: 20px;
    }

    .expert-solutions-list {
      justify-content: center;
    }

    .hero-column-explore-button {
      margin-top: 0;
      justify-content: center;
    }

    .hero-column-main-text {
      max-width: 700px;
      margin-bottom: 30px;
    }

    .hero-title {
      font-size: 2.2em;
      margin-bottom: 20px;
    }

    .hero-description {
      font-size: 0.95em;
      max-width: 600px;
      margin: 0 auto;
    }

    .hero-divider-line {
      margin-bottom: 50px;
    }

    .hero-content-bottom {
      flex-direction: column;
      align-items: center;
      gap: 30px;
    }

    .choose-stats {
      justify-content: center;
      padding: 0;
      gap: 20px;
    }

    .choose-stat {
      flex: 1 1 200px;
      justify-content: center;
      text-align: center;
    }

    .choose-stats p {
      font-size: 8px;
    }

    .choose-stats span {
      font-size: 40px;
    }

    .bottom-description {
      text-align: center;
      max-width: 600px;
      padding: 0;
    }
  }

  /* Mobile (Portrait): 768px */
  @media (max-width: 768px) {
    .hero-section-container {
      padding: 60px 20px;
      padding-bottom: 30px;
    }

    .hero-content-top {
      margin-bottom: 40px;
      padding: 0 10px;
    }

    .hero-title {
      font-size: 1.8em;
      margin-bottom: 15px;
    }

    .hero-description {
      font-size: 0.9em;
    }

    .explore-button {
      width: 140px;
      height: 140px;
      font-size: 0.8em;
    }

    .explore-button .button-text {
      font-size: 16px;
    }

    .hero-divider-line {
      margin-bottom: 40px;
    }

    .choose-stats {
      flex-direction: column;
      gap: 15px;
    }

    .choose-stat {
      flex: 0 0 auto;
      width: 100%;
      max-width: 280px;
      margin: 0 auto;
      justify-content: center;
    }

    .choose-stats p {
      font-size: 7px;
      letter-spacing: 1.5px;
    }

    .choose-stats span {
      font-size: 35px;
    }

    .bottom-description {
      font-size: 13px;
    }
  }

  /* Mobile Pequeño: 480px */
  @media (max-width: 480px) {
    .hero-section-container {
      padding: 50px 15px;
      padding-bottom: 20px;
    }

    .hero-content-top {
      margin-bottom: 30px;
    }

    .hero-title {
      font-size: 1.5em;
    }

    .hero-description {
      font-size: 0.85em;
    }

    .explore-button {
      width: 120px;
      height: 120px;
      font-size: 0.75em;
    }

    .explore-button .button-text {
      font-size: 14px;
    }

    .hero-divider-line {
      margin-bottom: 30px;
    }

    .choose-stats p {
      font-size: 6px;
      letter-spacing: 1px;
    }

    .choose-stats span {
      font-size: 30px;
    }

    .bottom-description {
      font-size: 12px;
    }
  }
</style>