---
import fondo2 from "../../assets/welcometwo/welcome-two.png"
import { getImage } from "astro:assets";
import Header from "../../components/HeaderTwo/HeaderTwo";

const optimizedFondo = await getImage({
  src: fondo2,
  width: 1000,
  format: 'webp',
  quality: 80
});
---
<div style={`background-image: url('${optimizedFondo.src}')`} id="welcome-two-wrapper" class="main-content-wrapper">
  <Header client:load/>
  <div class="welcome-two-header">
    <h2 class="welcome-two-title">Home Remodeling Services in Maryland</h2>
    <p>
      At Bethelor, we specialize in home remodeling services across Maryland —
      including kitchen renovations, bathroom makeovers, interior & exterior
      painting, flooring, and more. Whether you're updating one room or planning
      a full home renovation, our team delivers expert craftsmanship, reliable
      timelines, and personalized results that feel like home.
    </p>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const wrapper = document.getElementById("welcome-two-wrapper");
    const title = wrapper?.querySelector("h2");
    const paragraph = wrapper?.querySelector("p");

    if (wrapper) {
      wrapper.style.opacity = "0";
      wrapper.style.transform = "translateY(40px)";
      wrapper.style.transition =
        "opacity 0.7s ease-out, transform 0.7s ease-out";
    }
    if (title) {
      title.style.opacity = "0";
      title.style.transform = "translateY(20px)";
      title.style.transition = "opacity 0.7s ease-out, transform 0.7s ease-out";
    }
    if (paragraph) {
      paragraph.style.opacity = "0";
      paragraph.style.transform = "translateY(20px)";
      paragraph.style.transition =
        "opacity 0.7s ease-out, transform 0.7s ease-out";
      paragraph.style.transitionDelay = "0.2s"; // Retraso para el párrafo
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            if (wrapper) {
              wrapper.style.opacity = "1";
              wrapper.style.transform = "translateY(0)";
            }
            if (title) {
              title.style.opacity = "1";
              title.style.transform = "translateY(0)";
            }
            if (paragraph) {
              paragraph.style.opacity = "1";
              paragraph.style.transform = "translateY(0)";
            }
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.1,
      }
    );

    if (wrapper) {
      observer.observe(wrapper);
    }
  });
</script>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Host+Grotesk:ital,wght@0,300..800;1,300..800&display=swap");

  .main-content-wrapper {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    box-sizing: border-box;
    color: white;
  }

  .welcome-two-header {
    height: auto;
    display: flex;
    justify-content: center;
    align-items: end;
    flex-direction: row;
    padding-left: 105px;
    padding-right: 105px;
    padding-top: 20px;
    padding-bottom: 50px;
    border-bottom: 1px solid #000;
  }

  .welcome-two-header h2 {
    display: block;
    position: relative;
    z-index: 100;
    width: 2000px;

    margin-right: -60px;
    font-size: 6rem;
    font-family: "Host Grotesk", sans-serif;
    font-weight: 600;
    line-height: 1.2;
    color: #ffffff;
  }

  .welcome-two-header p {
    display: block;
    width: 1100px;
    max-width: 45%;
    color: rgb(240, 240, 240);
  }

  @media (max-width: 1024px) {
    .welcome-two-header {
      padding-left: 40px;
      padding-right: 40px;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding-bottom: 30px;
    }

    .welcome-two-header h2 {
      font-size: 3.5rem;
      max-width: 100%;
      margin-right: 0;
      margin-bottom: 20px;
    }

    .welcome-two-header p {
      font-size: 1rem;
      max-width: 700px;
      width: auto;
    }
  }

  @media (max-width: 768px) {
    .welcome-two-header {
      padding-left: 20px;
      padding-right: 20px;
      padding-bottom: 20px;
    }

    .welcome-two-header h2 {
      font-size: 2.5rem;
      margin-bottom: 15px;
    }

    .welcome-two-header p {
      font-size: 0.9rem;
      max-width: 90%;
    }
  }

  @media (max-width: 480px) {
    .welcome-two-header {
      padding-left: 10px;
      padding-right: 10px;
      padding-bottom: 15px;
    }

    .welcome-two-header h2 {
      font-size: 2rem;
      line-height: 1.3;
      margin-bottom: 10px;
    }

    .welcome-two-header p {
      font-size: 0.8rem;
      max-width: 95%;
    }
  }
</style>
