<div class="kitchen-welcome3">
  <img class="welcome-img1" src="public/welcome3/welcome01.png" alt="" />
  <img class="welcome-img2" src="public/welcome3/welcome02.png" alt="" />
</div>

<style>
  /* --- ESTILOS BASE (DESKTOP) --- */
  .kitchen-welcome3 {
    display: flex;
    flex-direction: row; /* En desktop, las imágenes están en fila */
    align-items: center;
    justify-content: center;
    gap: 20px; /* Espacio entre las imágenes */
    padding: 30px 0;
    max-width: 1400px; /* Limitar el ancho máximo del contenedor principal para desktop */
    margin: 0 auto; /* Centrar el contenedor en desktop */
    box-sizing: border-box; /* Asegura que padding no cause desbordamiento */
  }

  .welcome-img1 {
    width: 60%; /* 60% del ancho del contenedor padre */
    height: 450px; /* Altura fija para desktop */
    object-fit: cover; /* Asegura que la imagen cubra el área sin distorsionarse */
  }

  .welcome-img2 {
    width: 40%; /* 40% del ancho del contenedor padre */
    height: 450px; /* Altura fija para desktop */
    object-fit: cover;
  }

  /* --- MEDIA QUERIES PARA RESPONSIVIDAD --- */

  /* Tablet (Landscape) y Desktop pequeño: max-width 992px */
  @media (max-width: 992px) {
    .kitchen-welcome3 {
      padding: 20px 15px; /* Ajustar padding para tablets */
      gap: 15px; /* Reducir un poco el espacio */
      flex-wrap: wrap; /* Permitir que los elementos se envuelvan si es necesario */
    }

    .welcome-img1,
    .welcome-img2 {
      height: 350px; /* Reducir la altura de las imágenes en tablet */
      /* Mantendremos el flex-direction: row por ahora, ajustando los anchos */
      /* Si prefieres que se apilen en landscape, cambia flex-direction: column aquí */
    }

    .welcome-img1 {
      width: 55%; /* Ligeramente más pequeño para mantener proporciones */
    }

    .welcome-img2 {
      width: 40%; /* También ajustado */
    }
  }

  /* Mobile (Portrait) y Tablet pequeña: max-width 768px */
  @media (max-width: 768px) {
    .kitchen-welcome3 {
      flex-direction: column; /* ¡Apilar las imágenes en móviles! */
      padding: 15px 10px; /* Reducir aún más el padding */
      gap: 15px; /* Espacio entre imágenes apiladas */
    }

    .welcome-img1,
    .welcome-img2 {
      width: 100%; /* Ocupar todo el ancho disponible */
      height: 280px; /* Reducir la altura para móviles */
      max-width: 400px; /* Opcional: limitar el ancho máximo para pantallas muy grandes en vertical */
    }
  }

  /* Mobile Pequeño: max-width 480px */
  @media (max-width: 480px) {
    .kitchen-welcome3 {
      padding: 10px 5px;
    }

    .welcome-img1,
    .welcome-img2 {
      height: 200px; /* Altura aún menor para pantallas muy pequeñas */
    }
  }
</style>
