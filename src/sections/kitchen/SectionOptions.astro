---
import { FaCheckCircle } from "react-icons/fa";
import { services } from "../../lib/dataOptions";
---

<section class="kitchen-features-section-container">
  <h2 class="kitchen-features-title">
    What's included in a full kitchen remodel?
  </h2>

  <div class="features-grid">
    {
      services.map((service, index) => (
        <div class="feature-item">
          <FaCheckCircle className="feature-icon" />
          <div class="feature-content">
            <h3 class="feature-title">{service.title}</h3>
            <p class="feature-description">{service.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .kitchen-features-section-container {
    background-color: #ffffff;
    padding: 80px 80px;
    font-family: Arial, sans-serif;
    color: #333333;
    text-align: center;
  }

  .kitchen-features-title {
    font-size: 2.8em;
    color: #000000;
    margin-bottom: 60px;
    font-weight: bold;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px 50px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: left;
    padding: 0px 100px;
  }

  .feature-item {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 20px;
  }

  .feature-icon {
    font-size: 1.2em;
    color: #000000;
  }

  .feature-title {
    font-size: 18px;
    font-weight: 700;
    color: #000000;
    margin-top: 0;
    margin-bottom: 10px;
  }

  .feature-description {
    font-size: 12px;
    line-height: 1.5;
    color: #555555;
  }

  @media (max-width: 1024px) {
    .kitchen-features-title {
      font-size: 2.2em;
      margin-bottom: 40px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      padding: 0 20px;
    }

    .feature-item {
      align-items: center;
      text-align: center;
    }

    .feature-icon {
      font-size: 1.3em;
      margin-bottom: 10px;
    }

    .feature-title {
      font-size: 1.1em;
    }

    .feature-description {
      font-size: 0.95em;
    }
  }

  @media (max-width: 768px) {
    .kitchen-features-section-container {
      padding: 60px 20px;
    }
    .kitchen-features-title {
      font-size: 1.8em;
    }
  }

  @media (max-width: 480px) {
    .kitchen-features-section-container {
      padding: 40px 15px;
    }
    .kitchen-features-title {
      font-size: 1.5em;
    }
  }
</style>
