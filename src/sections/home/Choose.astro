  }

  .choose-description img {
    width: 150px;
    cursor: pointer;
  }

  .choose-details {
    flex: 2;
    display: flex;
    flex-direction: column;
    gap: 20px;
    border-left: 1px solid rgb(169, 169, 169);
  }

  .choose-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 20px;
    border-bottom: 1px solid rgb(169, 169, 169);
    font-family: "DM Sans", sans-serif;
    font-weight: 300;
    font-size: 11px;
