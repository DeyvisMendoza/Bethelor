      align-items: flex-start;
    }

    .choose-description {
      width: 100%;
      align-items: flex-start;
      text-align: left;
    }

    .choose-description p {
      font-size: 11px;
      width: 100%;
    }

    .choose-description img {
      width: 100px;
    }

    .choose-details {
      width: 100%;
