    display: block;
    padding: 15px;
    font-family: "Host Grotesk", sans-serif;
    font-weight: 700;
    font-size: 16px;
  }

  .f-box img {
    width: 95%;
    cursor: pointer;
  }

  .btn-custom{
    display: none;
  }

