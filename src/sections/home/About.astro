---
import { Image } from 'astro:assets';

import img1 from "../../assets/about/about1.png"

---

<section class="about-section" id="about-section-id">
  <div class="about-header">
    <div class="about-intro">
      <h2 class="about-title">About Bethelor.</h2>
      
    </div>
  </div>

  <div class="about-cicle-text">
    <div class="container-cicles" id="cicleContainer">
      <div class="cicle-white">
        <p>Done Projects</p>
        <span>+12</span>
      </div>
      <div class="cicle-black">
        <p>Done Projects</p>
        <span>2023</span>
      </div>
    </div>

    <div class="container-text">
      <h3>Home Remodeling with Integrity, Craftsmanship, and Vision.</h3>
      <p>
        At Bethelor, we specialize in home remodeling and improvement services
        across Maryland. From kitchens and bathrooms to complete home
        renovations, we bring precision, passion, and personalized attention to
        every project—big or small.
        <br />
        <br />
        Founded by skilled professionals with years of hands-on experience, Bethelor
        is built on trust, hard work, and a clear commitment to quality. We work
        closely with homeowners to transform their spaces with smart design, durable
        materials, and reliable results.
        <br />
        <br />
        Our team takes pride not only in what we build—but in how we make our clients
        feel throughout the process.
      </p>
    </div>
  </div>

  <div class="about-images">
    <Image
      src={img1}
      alt="About image 1"
      class="about-image1"
      data-animation-direction="left"
      loading="lazy"
    />
    <img
      src="/about/about2.png"
      alt="About image 2"
      class="about-image2"
      data-animation-direction="bottom"
      loading="lazy"
    />
    <img
      src="/about/about3.png"
      alt="About image 3"
      class="about-image3"
      data-animation-direction="right"
      loading="lazy"
    />
  </div>
</section>

<script>
  const sectionRef = document.getElementById("about-section-id");
  const cicleContainerRef = document.getElementById("cicleContainer");

  const handleCicleClick = () => {
    if (cicleContainerRef) {
      cicleContainerRef.classList.toggle("swap");
    }
  };

  if (cicleContainerRef) {
    cicleContainerRef.addEventListener("click", handleCicleClick);


    cicleContainerRef.addEventListener("mouseenter", () => {
      cicleContainerRef.classList.add("hovered");
    });
    cicleContainerRef.addEventListener("mouseleave", () => {
      cicleContainerRef.classList.remove("hovered", "tapped"); 
    });
    cicleContainerRef.addEventListener("mousedown", () => {
      cicleContainerRef.classList.add("tapped");
    });
    cicleContainerRef.addEventListener("mouseup", () => {
      cicleContainerRef.classList.remove("tapped");
      if (cicleContainerRef.matches(':hover')) {
        cicleContainerRef.classList.add("hovered");
      }
    });
  }

  const animateOnScroll = (element: Element | null, className: string, delay = 0) => {
    if (!element) return;
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            if (!entry.target.classList.contains(className)) {
              (entry.target as HTMLElement).style.transitionDelay = `${delay}s`;
            }
            entry.target.classList.add(className);
            observer.unobserve(entry.target); 
          }
        });
      },
      { threshold: 0.2 }, 
    );
    observer.observe(element);
  };

  const applyStaggeredAnimations = (elements: any[] | NodeListOf<Element>, baseDelay: number, delayStep = 0.1) => {
    elements.forEach((element: any, index: number) => {
      animateOnScroll(element, "animate", baseDelay + index * delayStep);
    });
  };

  document.addEventListener("DOMContentLoaded", () => {
    if (sectionRef) {
      animateOnScroll(
        sectionRef.querySelector(".about-title"),
        "animate",
        0.3,
      );

      animateOnScroll(
        sectionRef.querySelector(".container-cicles"),
        "animate-fade-scale", 
        0.6,
      );

      const textElements = sectionRef.querySelectorAll(
        ".container-text h3, .container-text p",
      );
      applyStaggeredAnimations(textElements, 0.8, 0.2); 


      const imagesContainer = sectionRef.querySelector(".about-images");
      if (imagesContainer) {


        const image1 = imagesContainer.querySelector(".about-image1");
        const image2 = imagesContainer.querySelector(".about-image2");
        const image3 = imagesContainer.querySelector(".about-image3");

        animateOnScroll(image1, "animate-left", 1.0);
        animateOnScroll(image2, "animate-bottom", 1.2); 
        animateOnScroll(image3, "animate-right", 1.4); 
      }
    }
  });

  document.addEventListener("astro:before-swap", () => {
    if (cicleContainerRef) {
      cicleContainerRef.removeEventListener("click", handleCicleClick);
      cicleContainerRef.removeEventListener("mouseenter", () => {}); 
      cicleContainerRef.removeEventListener("mouseleave", () => {});
      cicleContainerRef.removeEventListener("mousedown", () => {});
      cicleContainerRef.removeEventListener("mouseup", () => {});
    }
  });
</script>


<style>
  @import url("https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Host+Grotesk:ital,wght@0,300..800;1,300..800&display=swap");

 
  :root {
    --font-heading: "Host Grotesk", sans-serif;
    --font-body: "DM Sans", sans-serif;
    --color-text-light: #c8c8c8;
    --color-text-dark: #000000;
    --color-background-light: #ffffff;
    --color-background-gray: #fafafa;
    --section-max-width: 1450px;
  }

  .about-title,
  .container-cicles,
  .container-text h3,
  .container-text p,
  .about-image1,
  .about-image2,
  .about-image3 {
    opacity: 0;
  }

  .about-title,
  .container-text h3,
  .container-text p {
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  .about-title.animate,
  .container-text h3.animate,
  .container-text p.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .container-cicles {
    transform: scale(0.8);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .container-cicles.animate-fade-scale {
    opacity: 1;
    transform: scale(1);
  }

  .about-image1 {
    transform: translateX(-50px);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }
  .about-image1.animate-left {
    opacity: 1;
    transform: translateX(0);
  }

  .about-image2 {
    transform: translateY(50px);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }
  .about-image2.animate-bottom {
    opacity: 1;
    transform: translateY(0);
  }

  .about-image3 {
    transform: translateX(50px);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }
  .about-image3.animate-right {
    opacity: 1;
    transform: translateX(0);
  }

  .container-cicles.hovered {
    transform: scale(1.02); 
  }

  .container-cicles.tapped {
    transform: scale(0.98); 
  }


  .about-section {
    background-color: var(--color-background-gray); 
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    padding-bottom: 80px;
    gap: 10px;
  }

  .about-header {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    padding-top: 60px;
    padding-right: 100px;
    width: 1150px;
    gap: 130px;
  }


  .about-intro {
    display: flex;
    flex-direction: column;
    width: 750px;
    gap: 15px;
  }

  .about-intro h2 {
    font-family: "Host Grotesk", sans-serif;
    font-size: 6rem;
    font-weight: bold;
    line-height: 1;
  }

  .about-intro p {
    width: 90%;
    font-family: "DM Sans", sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #838383;
  }

  .about-cicle-text {
    display: flex;
    flex-direction: row;
    width: 1100px;
    padding: 50px;
    z-index: 5;
    gap: 50px;
  }

  .container-cicles {
    flex: 1;
    width: 100%;
    display: flex;
    position: relative;
    height: 140px;
    justify-content: flex-start;
  }

  .cicle-white,
  .cicle-black {
    border-radius: 50%;
    width: 140px;
    height: 140px;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;
    padding-bottom: 35px;
    font-family: "Host Grotesk", sans-serif;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    position: absolute;
    user-select: none;
    transition: transform 0.5s ease, z-index 0.3s ease; 
  }

  .container-cicles:not(.swap) .cicle-white {
    background-color: rgb(227, 227, 227);
    color: rgb(121, 121, 121);
    z-index: 2;
    left: 0;
  }

  .container-cicles:not(.swap) .cicle-black {
    background-color: black;
    color: white;
    z-index: 1;
    left: 70px;
  }

  .container-cicles.swap .cicle-white {
    background-color: rgb(227, 227, 227);
    color: rgb(121, 121, 121);
    left: 70px;
    z-index: 1;
  }

  .container-cicles.swap .cicle-black {
    background-color: black;
    color: white;
    left: 0;
    z-index: 2;
  }

  .cicle-white p,
  .cicle-black p {
    font-size: 12px;
  }

  .cicle-white span,
  .cicle-black span {
    font-size: 20px;
    font-weight: 400;
  }

  .container-text {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
    gap: 10px;
  }

  .container-text h3 {
    font-family: "Host Grotesk", sans-serif;
    font-size: 1.8rem;
    font-weight: 500;
    user-select: none;
  }

  .container-text p {
    font-family: "DM Sans", sans-serif;
    font-weight: 400;
    font-size: 11px;
    color: #838383;
    user-select: none;
  }

  .about-images {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    flex-direction: row;
    gap: 15px;
    width: 1100px;
    position: relative;
    margin-top: -70px;
    z-index: 100;
  }

  .about-image1 {
    width: 400px;
    height: 600px;
    object-fit: cover;
  }

  .about-image2 {
    width: 315px;
    height: 400px;
    object-fit: cover;
  }

  .about-image3 {
    width: 315px;
    height: 350px;
    object-fit: cover;
  }

  @media (max-width: 1023px) {
    .about-section {
      padding: 60px 40px;
      gap: 40px;
      box-sizing: border-box;
    }

    .about-header {
      width: 100%;
      padding-right: 0;
      justify-content: flex-start;
      gap: 30px;
      padding-top: 40px;
    }


    .about-intro {
      width: auto;
      flex: 1;
      gap: 10px;
    }

    .about-intro h2 {
      font-size: 4.5rem;
    }

    .about-intro p {
      font-size: 13px;
      width: 95%;
    }

    .about-cicle-text {
      flex-direction: row;
      width: 100%;
      padding: 30px;
      justify-content: center;
      align-items: flex-start;
      gap: 30px;
    }

    .container-cicles {
      width: 200px;
      height: 120px;
      flex-shrink: 0;
      justify-content: center;
    }

    .cicle-white,
    .cicle-black {
      width: 120px;
      height: 120px;
      padding-bottom: 25px;
      font-size: 13px;
    }

    .container-cicles:not(.swap) .cicle-white {
      left: -15px;
    }

    .container-cicles:not(.swap) .cicle-black {
      left: 45px;
    }

    .container-cicles.swap .cicle-white {
      left: 45px;
    }

    .container-cicles.swap .cicle-black {
      left: -15px;
    }

    .cicle-white p,
    .cicle-black p {
      font-size: 11px;
    }

    .cicle-white span,
    .cicle-black span {
      font-size: 1.6rem;
    }

    .container-text {
      flex: 1;
      align-items: flex-start;
      text-align: left;
      gap: 10px;
    }

    .container-text h3 {
      font-size: 1.6rem;
    }

    .container-text p {
      font-size: 12px;
    }

    .about-images {
      flex-direction: row;
      gap: 10px;
      width: 100%;
      margin-top: -40px;
      justify-content: center;
      align-items: flex-end;
    }

    .about-image1 {
      width: 30%;
      height: 350px;
      max-width: 250px;
    }

    .about-image2 {
      width: 25%;
      height: 280px;
      max-width: 200px;
    }

    .about-image3 {
      width: 25%;
      height: 230px;
      max-width: 200px;
    }

  }

  @media (max-width: 767px) {
    .about-section {
      padding: 30px 15px;
      gap: 20px;
    }

    .about-header {
      flex-direction: column;
      padding-top: 30px;
      gap: 15px;
      align-items: center;
      text-align: center;
    }



    .about-intro {
      width: 100%;
      align-items: center;
    }

    .about-intro h2 {
      font-size: 3rem;
      text-align: center;
    }

    .about-intro p {
      font-size: 12px;
      width: 90%;
    }

    .about-cicle-text {
      flex-direction: column;
      padding: 20px 0;
      gap: 20px;
      align-items: center;
    }

    .container-cicles {
      width: 150px;
      height: 100px;
    }

    .cicle-white,
    .cicle-black {
      width: 100px;
      height: 100px;
      padding-bottom: 20px;
      font-size: 12px;
    }

    .container-cicles:not(.swap) .cicle-white {
      left: -10px;
    }

    .container-cicles:not(.swap) .cicle-black {
      left: 30px;
    }

    .container-cicles.swap .cicle-white {
      left: 30px;
    }

    .container-cicles.swap .cicle-black {
      left: -10px;
    }

    .cicle-white p,
    .cicle-black p {
      font-size: 9px;
    }

    .cicle-white span,
    .cicle-black span {
      font-size: 1.3rem;
    }

    .container-text {
      width: 90%;
      align-items: start;
      text-align: start;
      gap: 10px;
      margin-top: 105px;
    }

    .container-text h3 {
      font-size: 1.3rem;
    }

    .container-text p {
      font-size: 11px;
      width: 90%;
    }

    .about-images {
      flex-direction: column;
      gap: 10px;
      width: 100%;
      margin-top: 0;
      align-items: center;
    }

    .about-image1,
    .about-image2,
    .about-image3 {
      width: 90%;
      height: 300px;
      max-width: 450px;
    }
  }

  @media (max-width: 480px) {
    .about-section {
      padding: 30px 0;
    }

    .about-title {
      font-size: clamp(1.8rem, 9vw, 2.8rem);
    }

    .container-cicles {
      width: 150px;
      height: 100px;
    }

    .cicle-white,
    .cicle-black {
      width: 90px; 
      height: 90px;
      padding-bottom: 15px; 
    }

    .cicle-white p,
    .cicle-black p {
      font-size: 0.65rem; 
    }

    .cicle-white span,
    .cicle-black span {
      font-size: 1.2rem;
    }

    .container-cicles:not(.swap) .cicle-white {
      left: -5px;
    }

    .container-cicles:not(.swap) .cicle-black {
      left: 25px;
    }

    .container-cicles.swap .cicle-white {
      left: 25px;
    }

    .container-cicles.swap .cicle-black {
      left: -5px;
    }

    .container-text h3 {
      font-size: clamp(1rem, 6vw, 1.5rem);
    }

    .container-text p {
      font-size: 0.8rem;
    }

    .about-images img {
      height: 200px;
    }
  }
</style>