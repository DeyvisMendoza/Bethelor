---
import "../../styles/global.css";
// import "../../styles/sections/home/welcome.css";
// import Fondo1 from "../../assets/welcome/welcome-fondo1.png";
// import Fondo2 from "../../assets/welcome/welcome-fondo2.png";
// import Fondo3 from "../../assets/welcome/welcome-fondo3.png";
import AnimatedWelcomeText from "../../../src/components/AnimatedWelcomeText/AnimatedWelcomeText.jsx";
import fondo1 from "../../assets/welcome/welcome-fondo1.png"
import fondo2 from "../../assets/welcome/welcome-fondo2.png"
import fondo3 from "../../assets/welcome/welcome-fondo3.png"
import { getImage } from "astro:assets";

const optimizedFondo = await getImage({
  src: fondo1,
  width: 1000,
  format: 'webp',
  quality: 80
});

const optimizedFondo2 = await getImage({
  src: fondo2,
  width: 1000,
  format: 'webp',
  quality: 80
});

const optimizedFondo3 = await getImage({
  src: fondo3,
  width: 1000,
  format: 'webp',
  quality: 80
});

---

<section class="welcome bg-black flex flex-col justify-center items-center text-white">
  <div class="main-section flex w-full max-w-[1450px] gap-[0.3125rem] flex-wrap">
    <div class="image-text-container flex-1 min-w-[400px] h-[700px] relative">
      <div
        class="image-overlay"
        style={`background-image: url('${optimizedFondo.src}')`}
      ></div>
      <AnimatedWelcomeText client:load />
    </div>

    <div class="right-container flex-1 min-w-[400px] flex flex-col">
      <div class="right-images flex-2 flex gap-[0.3125rem] h-full">
        <div
          class="image"
          style={`background-image: url('${optimizedFondo2.src}')`}
        ></div>
        <div
          class="image"
          style={`background-image: url('${optimizedFondo3.src}')`}
        ></div>
      </div>
      <div class="description flex-1 text-white flex justify-center items-center px-[3.125rem] text-start max-sm:text-center">
        <p class="fade-in" data-scroll>
          At Bethelor, we bring your vision to life with expert remodeling
          of kitchens, bathrooms, and interiors. Proudly serving Maryland
          with reliable craftsmanship, personalized designs, and results
          that feel like home.
        </p>
      </div>
    </div>
  </div>

  <div class="button-section">
    <div class="button-item button-animate-1">
      <a href="/services">View All Services</a>
    </div>
    <div class="button-item button-animate-2">
      <a href="/projects">View All Projects</a>
    </div>
    <div class="button-item button-animate-3">
      <a href="/about">About Us</a>
    </div>
    <div class="button-item button-animate-4">
      <a href="/contact">Contact Us</a>
    </div>
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Host+Grotesk:ital,wght@0,300..800;1,300..800&display=swap");

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .main-section {
    width: 100%;
    max-width: 1450px;
    gap: 0.3125rem;
  }

  .image-text-container {
    min-width: 400px;
    height: 700px;
    position: relative;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
    animation-delay: 0.2s;
  }

  .text-container {
    padding: 3rem;
  }

  .text-container h1 {
    font-family: "Host Grotesk", sans-serif;
    font-size: 6rem;
    font-weight: bold;
    line-height: 1;
  }

  .text-container p {
    font-size: 1.25rem;
  }

  .right-container {
    min-width: 400px;
    display: flex;
    flex-direction: column;
  }

  .right-images {
    display: flex;
    gap: 0.3125rem;
    height: 100%;
    flex: 2;
  }

  .image {
    flex: 1;
    background-size: cover;
    background-position: center;
    height: 100%;
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
    animation-delay: 0.4s;
  }

  .description {
    flex: 1;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3.125rem;
    text-align: start;
  }

  .description p {
    font-family: "DM Sans", sans-serif;
    font-weight: 300;
    font-size: 0.875rem;
  }

  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s ease-out forwards;
    animation-delay: 2s;
  }

  .button-section {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    width: 100%;
    max-width: 1450px;
    margin-top: 0.3125rem;
  }

  .button-item {
    text-align: center;
    background-color: #000;
    border: 1px solid #383838;
    transition: background-color 0.3s ease;
    padding: 1.5625rem;
    opacity: 0;
    transform: translateY(20px);
  }

  .button-item a {
    text-decoration: none;
    color: #fff;
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    border-right: 0.09375rem solid transparent;
  }

  .button-item a.animate {
    animation: typewriter 2s steps(20, end) forwards;
    border-right: none;
  }

  .button-animate-1 {
    animation: fadeInSlideUp 0.6s ease forwards;
    animation-delay: 2.2s;
  }

  .button-animate-2 {
    animation: fadeInSlideUp 0.6s ease forwards;
    animation-delay: 2.4s;
  }

  .button-animate-3 {
    animation: fadeInSlideUp 0.6s ease forwards;
    animation-delay: 2.6s;
  }

  .button-animate-4 {
    animation: fadeInSlideUp 0.6s ease forwards;
    animation-delay: 2.8s;
  }

  @keyframes typewriter {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: white;
    }
  }

  @media (min-width: 1451px) {
    .main-section,
    .button-section {
      max-width: 1450px;
    }
  }

  @media (max-width: 1200px) {
    .main-section {
      flex-direction: column;
      max-width: 90vw;
    }

    .image-text-container {
      flex: none;
      height: 600px;
      min-width: unset;
      width: 100%;
    }

    .text-container {
      padding: 2rem;
    }

    .text-container h1 {
      font-size: 4.5rem;
    }

    .text-container p {
      font-size: 1.1rem;
    }

    .right-container {
      flex: none;
      height: auto;
      min-width: unset;
      width: 100%;
      margin-top: 0.3125rem;
    }

    .right-images {
      height: 400px;
      margin-bottom: 0.3125rem;
    }

    .description {
      padding: 1.875rem;
      text-align: center;
    }

    .description p {
      font-size: 0.8125rem;
    }

    .button-section {
      grid-template-columns: repeat(2, 1fr);
      max-width: 90vw;
    }
  }

  @media (max-width: 768px) {
    .welcome {
      padding: 1rem 0.5rem;
    }

    .main-section {
      max-width: 95vw;
      gap: 0.25rem;
    }

    .image-text-container {
      height: 500px;
    }

    .text-container {
      padding: 1.5rem;
    }

    .text-container h1 {
      font-size: 3.5rem;
    }

    .text-container p {
      font-size: 1rem;
    }

    .right-images {
      height: 300px;
      margin-bottom: 0.25rem;
    }

    .description {
      padding: 1.25rem;
    }

    .description p {
      font-size: 0.8125rem;
    }

    .button-section {
      grid-template-columns: 1fr;
      max-width: 95vw;
      margin-top: 0.25rem;
    }

    .button-item {
      padding: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .welcome {
      padding: 0.5rem;
    }

    .main-section {
      max-width: 98vw;
      gap: 0.2rem;
    }

    .image-text-container {
      height: 400px;
    }

    .text-container {
      padding: 1rem;
    }

    .text-container h1 {
      font-size: 2.5rem;
    }

    .text-container p {
      font-size: 0.9rem;
    }

    .right-images {
      height: 250px;
      flex-direction: column;
      gap: 0.2rem;
      margin-bottom: 0.2rem;
    }

    .image {
      height: 120px;
      width: 100%;
    }

    .description {
      padding: 0.9375rem;
    }

    .description p {
      font-size: 0.75rem;
    }

    .button-item {
      padding: 1rem;
    }
  }
</style>
