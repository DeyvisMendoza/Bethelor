---

import { BotonTip } from "../../components/BotonTip/BotonTip";
import { tips } from "../../lib/dataTips";

---

<section class="tips-section" id="tips-section-id">
  <div class="tips">
    <h3 class="tips-title">Home Remodeling Tips & Trends in Maryland</h3>
    <p>
      Discover expert advice, remodeling inspiration, and real-life project
      stories from homes across Maryland. Whether youâ€™re updating a bathroom in
      Towson or renovating your kitchen in Dundalk, our team shares tips,
      trends, and local insights to help you create a space you love.
    </p>
  </div>

  <div class="tips-card-container">
    {
      tips.map((tip, idx) => (
        <div class="tip-card" data-index={idx}>
          <div class="tip-image-container">
            <img src={tip.img} alt={tip.alt} />
            <div class="tip-date-box">
              <div class="tip-day">
                <p>{tip.day}</p>
              </div>
              <div class="tip-month">
                <p>{tip.month}</p>
              </div>
            </div>
            <div class="tip-tag-box">{tip.tags}</div>
          </div>
          <div class="tip-content">
            <h2>{tip.title}</h2>
            <p>{tip.desc}</p>
          </div>
        </div>
      ))
    }
  </div>
  <div class="button-tip-container">
    <BotonTip />
  </div>
</section>

<script>

  const sectionRef = document.getElementById("tips-section-id");

  const animateOnScroll = (
    element: Element | null,
    className: string,
    delay = 0
  ) => {
    if (!element) return;

    if (element.classList.contains(className)) {
      return;
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            (entry.target as HTMLElement).style.transitionDelay = `${delay}s`;
            entry.target.classList.add(className);
            observer.unobserve(entry.target); 
          }
        });
      },
      { threshold: 0.1 }
    );
    observer.observe(element);
  };

  const initializeTipsAnimations = () => {
    if (!sectionRef) {
      console.warn(
        "Section #tips-section-id not found, animations not initialized."
      );
      return;
    }


    animateOnScroll(sectionRef, "animate-visible-y");


    const tipsHeader = sectionRef.querySelector(".tips");
    if (tipsHeader) {
      animateOnScroll(tipsHeader, "animate-fade-up", 0.2); 
    }

    const tipCards = sectionRef.querySelectorAll(".tip-card");
    tipCards.forEach((card, index) => {
 
      const delay = 0.2 + index * 0.1;
      animateOnScroll(card, "animate-fade-up", delay);
    });

    const buttonContainer = sectionRef.querySelector(".button-tip-container");
    if (buttonContainer) {
      const lastCardDelay =
        tipCards.length > 0 ? 0.2 + (tipCards.length - 1) * 0.1 : 0;
      const buttonDelay = lastCardDelay + 0.3; 
      animateOnScroll(buttonContainer, "animate-fade-up", buttonDelay);
    }
  };

  document.addEventListener("DOMContentLoaded", initializeTipsAnimations);

  document.addEventListener("astro:before-swap", () => {

  });
</script>

<style>
  .tips-section,
  .tips,
  .tip-card,
  .button-tip-container {
    opacity: 0;
    transform: translateY(50px); 
    transition:
      opacity 0.7s ease-out,
      transform 0.7s ease-out; 
  }

  .tips-section.animate-visible-y,
  .tips.animate-fade-up,
  .tip-card.animate-fade-up,
  .button-tip-container.animate-fade-up {
    opacity: 1;
    transform: translateY(0);
  }

  @import url("https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Host+Grotesk:ital,wght@0,300..800;1,300..800&display=swap");

  .tips-section {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    padding: 10px 10px 40px 10px;
    flex-direction: column;
    gap: 20px;
    overflow: hidden;
  }

  .tips {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    padding: 20px 300px;
    width: 100%;
    max-width: 1200px;
  }
  .tips h3 {
    font-family: "Host Grotesk", sans-serif;
    font-size: 2rem;
    font-weight: bold;
    line-height: 1;
    text-align: center;
  }
  .tips p {
    font-family: "DM Sans", sans-serif;
    font-weight: 400;
    font-size: 14px;
    text-align: center;
    width: 450px;
  }

  .tips-card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    width: 100%;
    max-width: 1000px;
  }

  .tip-card {
    width: 300px;
    background: white;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .tip-image-container {
    position: relative;
    height: 400px;
    width: 100%;
    flex-shrink: 0;
  }

  .tip-image-container img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  .tip-date-box {
    position: absolute;
    top: 0;
    left: 0;
    background: black;
    color: white;
    padding: 10px 15px;
    text-align: center;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .tip-date-box .tip-day p {
    font-size: 30px;
    font-family: "DM Sans", sans-serif;
    font-weight: 400;
    margin: 0;
  }

  .tip-date-box .tip-month {
    font-size: 12px;
    font-weight: 300;
    display: block;
    padding-top: 5px;
    border-top: 1px solid rgb(169, 169, 169);
    margin-top: 5px;
  }

  .tip-tag-box {
    position: absolute;
    bottom: 0;
    right: 0;
    background: black;
    color: white;
    padding: 5px 10px;
    font-size: 8px;
    text-transform: uppercase;
    font-family: "DM Sans", sans-serif;
  }

  .tip-content {
    padding: 20px 0px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .tip-content h2 {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 10px;
    font-family: "Host Grotesk", sans-serif;
    padding: 0 20px;
  }

  .tip-content p {
    font-size: 12px;
    color: #555;
    margin: 0;
    font-family: "Host Grotesk", sans-serif;
    padding: 0 20px;
  }

  .button-tip-container {
    margin-top: 20px; 
    display: flex; 
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .boton-tip {
    background-color: #000;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-family: "DM Sans", sans-serif;
    font-size: 1rem;
    font-weight: bold;
    text-transform: uppercase;
    transition: background-color 0.3s ease;
  }

  .boton-tip:hover {
    background-color: #333;
  }

  @media (max-width: 1024px) {
    .tips-section {
      padding: 20px 10px 30px 10px;
      gap: 15px;
    }

    .tips {
      padding: 15px 50px;
      width: 100%;
      max-width: 700px;
    }
    .tips h3 {
      font-size: 1.8rem;
    }
    .tips p {
      font-size: 13px;
      width: auto;
      max-width: 600px;
    }

    .tips-card-container {
      gap: 20px;
      padding: 0 10px;
    }

    .tip-card {
      width: calc(50% - 10px); 
    }

    .tip-image-container {
      height: 250px;
    }

    .tip-content h2 {
      font-size: 15px;
    }

    .tip-content p {
      font-size: 11px;
    }
  }

  @media (max-width: 768px) {
    .tips-section {
      padding: 15px 0 20px 0;
      gap: 15px;
    }

    .tips {
      padding: 10px 20px;
    }
    .tips h3 {
      font-size: 1.5rem;
      line-height: 1.3;
    }
    .tips p {
      font-size: 12px;
      width: auto;
      max-width: 400px;
    }

    .tips-card-container {
      flex-direction: column; 
      align-items: center;
      gap: 15px;
      padding: 0 10px;
    }

    .tip-card {
      width: 100%;
      max-width: 350px; 
    }

    .tip-image-container {
      height: 200px;
    }

    .tip-content h2 {
      font-size: 14px;
      padding: 0 15px;
    }

    .tip-content p {
      font-size: 10px;
      padding: 0 15px;
    }

    .tip-date-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 5px;
    }
    .tip-date-box .tip-month {
      padding-top: 5px;
      margin-top: 0;
    }
  }

  @media (max-width: 480px) {
    .tips h3 {
      font-size: 1.3rem;
    }
    .tips p {
      font-size: 11px;
    }
    .tip-date-box .tip-day p {
      font-size: 24px;
    }
    .tip-date-box .tip-month {
      font-size: 10px;
    }
    .tip-tag-box {
      padding: 4px 8px;
      font-size: 7px;
    }
    .tip-image-container {
      height: 180px;
    }
    .tip-content h2 {
      font-size: 13px;
    }
    .tip-content p {
      font-size: 9px;
    }
  }
</style>
